                @Html.DisplayFor(model => model.AspeosStock.PackCostGstIncluded)
            </h2>
        </div>

        <div class="detailsTableRow">
            <h1>
                @Html.DisplayNameFor(model => model.AspeosStock.SheetsPerPack)
            </h1>
            <h2>
                @Html.DisplayFor(model => model.AspeosStock.SheetsPerPack)
            </h2>
        </div>

        <div class="detailsTableRow">
            <h1>
                @Html.DisplayNameFor(model => model.AspeosStock.SheetCost)
            </h1>
            <h2>
                @Html.DisplayFor(model => model.AspeosStock.SheetCost)

@model PaperCalc.Pages.AspeosStock.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1 class="stockTitle">Details</h1>

<div class="stockDetails">
    <h4>SRA3 Stock</h4>
    <hr />
    <div class="detailsTable">
        <div class="detailsTableRow">
            <h1>
                @Html.DisplayNameFor(model => model.AspeosStock.Company)
            </h1>
            <h2>
                @Html.DisplayFor(model => model.AspeosStock.Company)
            </h2>
        </div>

        <div class="detailsTableRow">
            <h1>
                @Html.DisplayNameFor(model => model.AspeosStock.ProductName)
            </h1>
            <h2>
                @Html.DisplayFor(model => model.AspeosStock.ProductName)
            </h2>
        </div>

        <div class="detailsTableRow">
            <h1>
                @Html.DisplayNameFor(model => model.AspeosStock.Size)
            </h1>
            <h2>
                @Html.DisplayFor(model => model.AspeosStock.Size)
            </h2>
        </div>

        <div class="detailsTableRow">
            <h1>
                @Html.DisplayNameFor(model => model.AspeosStock.Weight)
            </h1>
            <h2>
                @Html.DisplayFor(model => model.AspeosStock.Weight)<span>gsm</span>
            </h2>
        </div>

        <div class="detailsTableRow">
            <h1>
                @Html.DisplayNameFor(model => model.AspeosStock.CoatType)
            </h1>

@page
@model PaperCalc.Pages.DocumentsStock.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1 class="stockTitle">Details</h1>

<div class="stockDetails">
    <h4>Flat Stock</h4>
    <hr />
    <div class="detailsTable">
        <div class="detailsTableRow">
            <h1>
                @Html.DisplayNameFor(model => model.DocumentsStock.Supplier)
            </h1>
            <h2>
                @Html.DisplayFor(model => model.DocumentsStock.Supplier)
            </h2>
        </div>

        <div class="detailsTableRow">
            <h1>
                @Html.DisplayNameFor(model => model.DocumentsStock.StockBrand)
            </h1>
            <h2>
                @Html.DisplayFor(model => model.DocumentsStock.StockBrand)
            </h2>
        </div>

        <div class="detailsTableRow">
            <h1>
                @Html.DisplayNameFor(model => model.DocumentsStock.Size)
            </h1>
            <h2>
                @Html.DisplayFor(model => model.DocumentsStock.Size)
            </h2>
        </div>

        <div class="detailsTableRow">
            <h1>
                @Html.DisplayNameFor(model => model.DocumentsStock.Weight)
            </h1>
            <h2>
                @Html.DisplayFor(model => model.DocumentsStock.Weight)<span>gsm</span>
            </h2>
        </div>

        <div class="detailsTableRow">
            <h1>
                @Html.DisplayNameFor(model => model.DocumentsStock.CoatType)
            </h1>
            <h2>
                @Html.DisplayFor(model => model.DocumentsStock.CoatType)
            </h2>
        </div>

        <div class="detailsTableRow">
            <h1>
                @Html.DisplayNameFor(model => model.DocumentsStock.HeightOf100Sheets)
            </h1>
            <h2>

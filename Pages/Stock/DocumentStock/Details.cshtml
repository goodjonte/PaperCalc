        <div class="detailsTableRow">
            <h1>
                @Html.DisplayNameFor(model => model.DocumentsStock.PricePerPack)
            </h1>
            <h2>
                @Html.DisplayFor(model => model.DocumentsStock.PricePerPack)
            </h2>
        </div>

        <div class="detailsTableRow">
            <h1>
                @Html.DisplayNameFor(model => model.DocumentsStock.SheetsPerPack)
            </h1>
            <h2>

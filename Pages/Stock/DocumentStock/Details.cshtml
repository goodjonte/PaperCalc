@page
@model PaperCalc.Pages.FlatStock.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1 class="stockTitle">Details</h1>

<div class="stockDetails">
    <h4>Flat Stock</h4>
    <hr />
    <div class="detailsTable">
        <div class="detailsTableRow">
            <h1>
                @Html.DisplayNameFor(model => model.FlatStock.Company)
            </h1>
            <h2>
                @Html.DisplayFor(model => model.FlatStock.Company)
            </h2>
        </div>

        <div class="detailsTableRow">
            <h1>
                @Html.DisplayNameFor(model => model.FlatStock.ProductName)
            </h1>
            <h2>
                @Html.DisplayFor(model => model.FlatStock.ProductName)
            </h2>
        </div>

        <div class="detailsTableRow">
            <h1>
                @Html.DisplayNameFor(model => model.FlatStock.Size)
            </h1>
            <h2>
                @Html.DisplayFor(model => model.FlatStock.Size)
            </h2>
        </div>

        <div class="detailsTableRow">
            <h1>
                @Html.DisplayNameFor(model => model.FlatStock.Weight)
            </h1>
            <h2>
                @Html.DisplayFor(model => model.FlatStock.Weight)<span>gsm</span>
            </h2>
        </div>

        <div class="detailsTableRow">
            <h1>
                @Html.DisplayNameFor(model => model.FlatStock.CoatType)
            </h1>
            <h2>
                @Html.DisplayFor(model => model.FlatStock.CoatType)
            </h2>
        </div>

        <div class="detailsTableRow">
            <h1>
                @Html.DisplayNameFor(model => model.FlatStock.PackCost)
            </h1>
            <h2>
                @Html.DisplayFor(model => model.FlatStock.PackCost)
            </h2>
        </div>

        <div class="detailsTableRow">
            <h1>
                @Html.DisplayNameFor(model => model.FlatStock.PackCostGstIncluded)
            </h1>
            <h2>
                @Html.DisplayFor(model => model.FlatStock.PackCostGstIncluded)
            </h2>
        </div>

        <div class="detailsTableRow">
            <h1>
                @Html.DisplayNameFor(model => model.FlatStock.SheetsPerPack)
            </h1>
            <h2>
                @Html.DisplayFor(model => model.FlatStock.SheetsPerPack)
            </h2>
        </div>

        <div class="detailsTableRow">
            <h1>
                @Html.DisplayNameFor(model => model.FlatStock.SheetCost)
            </h1>
            <h2>
                @Html.DisplayFor(model => model.FlatStock.SheetCost)
            </h2>
        </div>
    </div>
</div>
<div class="stockDetailsButtons">
    <a class="btn btn-success" asp-page="./Edit" asp-route-id="@Model.FlatStock?.Id">edit</a>
    <a class="btn btn-primary" asp-page="./Index">back to stock</a>
</div>

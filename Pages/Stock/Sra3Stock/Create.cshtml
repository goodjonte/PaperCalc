@page
@model PaperCalc.Pages.AspeosStock.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="stockTitle">Create</h1>

<div class="stockEditPage">

    <form class="editStockForm" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="AspeosStock.Id" />

        <div class="editRowTitle">
            <h3>product</h3>
        </div>
        <div class="editFormRow borderBottom">
            <div class="form-group">
                <label class="control-label">company<span class="requiredStar">*</span></label>
                <input asp-for="AspeosStock.Company" class="form-control" />
                <span asp-validation-for="AspeosStock.Company" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">product name<span class="requiredStar">*</span></label>
                <input asp-for="AspeosStock.ProductName" class="form-control" />
                <span asp-validation-for="AspeosStock.ProductName" class="text-danger"></span>
            </div>
            <div>
            </div>
        </div>

        <div class="editRowTitle">
            <h3>specifications</h3>
        </div>
        <div class="editFormRow borderBottom">
            <div class="form-group">
                <label asp-for="AspeosStock.Size" class="control-label">size<span class="requiredStar">*</span></label>
                <select asp-for="AspeosStock.Size" class="form-control custom-select">
                    <option value="">Select a Size...</option>
                    <option>SRA3</option>
                    <option value="A4">A4</option>
                    <option value="A3">A3</option>
                    <option value="A2">A2</option>
                    <option value="A1">A1</option>
                    <option value="A0">A0</option>
                    <option value="SRA4">SRA4</option>
                    <option value="SRA3">SRA3</option>
                    <option value="SRA2">SRA2</option>
                    <option value="SRA1">SRA1</option>
                </select>
                <span asp-validation-for="AspeosStock.Size" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AspeosStock.Weight" class="control-label">weight(gsm)<span class="requiredStar">*</span></label>
                <input asp-for="AspeosStock.Weight" class="form-control" />
                <span asp-validation-for="AspeosStock.Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AspeosStock.CoatType" class="control-label">coating<span class="requiredStar">*</span></label>
                <select asp-for="AspeosStock.CoatType" class="form-control custom-select">
                    <option value="">Select a Coating Type...</option>
                    <option value="Adhesive">Adhesive</option>
                    <option value="Coated">Coated</option>
                    <option value="Uncoated">Uncoated</option>
                    <option value="Synthetic">Synthetic</option>
                    <option value="Matt">Matt</option>
                    <option value="Satin">Satin</option>
                    <option value="Gloss">Gloss</option>
                </select>
                <span asp-validation-for="AspeosStock.CoatType" class="text-danger"></span>
            </div>
        </div>

        <div class="editRowTitle">
            <h3>quantity & cost</h3>
        </div>
        <div class="editFormRow">
            <div class="form-group">
                <label asp-for="AspeosStock.PackCost" class="control-label">pack cost<span class="requiredStar">*</span></label>
                <input asp-for="AspeosStock.PackCost" class="form-control" />
                <span asp-validation-for="AspeosStock.PackCost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AspeosStock.SheetsPerPack" class="control-label">sheets per pack<span class="requiredStar">*</span></label>
                <input asp-for="AspeosStock.SheetsPerPack" class="form-control" />
                <span asp-validation-for="AspeosStock.SheetsPerPack" class="text-danger"></span>
            </div>
            <div>
            </div>
        </div>

        <div class="form-group">
            <input type="submit" value="save" class="btn btn-success" />
        </div>
        <div>
            <a class="btn btn-primary" asp-page="./Index">back to list</a>
        </div>

    </form>


</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

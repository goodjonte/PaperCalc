@page
@model Binding.Cover.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="stockTitle">Create</h1>

<div class="stockEditPage">
    
    <form method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="editRowTitle">
            <h3>product</h3>
        </div>
        <div class="editFormRow borderBottom">
            <div class="form-group">
                <label asp-for="BindingCoverStock.Supplier" class="control-label"></label>
                <input asp-for="BindingCoverStock.Supplier" class="form-control" />
                <span asp-validation-for="BindingCoverStock.Supplier" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BindingCoverStock.StockBrand" class="control-label"></label>
                <input asp-for="BindingCoverStock.StockBrand" class="form-control" />
                <span asp-validation-for="BindingCoverStock.StockBrand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BindingCoverStock.StockType" class="control-label"></label>
                <select asp-for="BindingCoverStock.StockType" class="form-control custom-select">
                    <option value="">Select a Coating Type...</option>
                    <option value="Adhesive">Adhesive</option>
                    <option value="Synthetic">Synthetic</option>
                    <option value="Paper">Paper</option>
                    <option value="Card">Card</option>
                    <option value="CardTextured">Card Textured</option>
                    <option value="CardRecycled">Card Recycled</option>
                    <option value="Leather">Leather</option>
                    <option value="Acetate">Acetate</option>
                </select>
                <span asp-validation-for="BindingCoverStock.StockType" class="text-danger"></span>
            </div>
        </div>

        <div class="editRowTitle">
            <h3>details</h3>
        </div>
        <div class="editFormRow borderBottom">
            <div class="form-group">
                <label asp-for="BindingCoverStock.Size" class="control-label"></label>
                <select asp-for="BindingCoverStock.Size" class="form-control custom-select">
                    <option value="">Select a Size...</option>
                    <option value="A4">A4</option>
                    <option value="A3">A3</option>
                    <option value="A2">A2</option>
                    <option value="A1">A1</option>
                    <option value="A0">A0</option>
                    <option value="SRA4">SRA4</option>
                    <option value="SRA3">SRA3</option>
                    <option value="SRA2">SRA2</option>
                    <option value="SRA1">SRA1</option>
                </select>
                <span asp-validation-for="BindingCoverStock.Size" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BindingCoverStock.SheetsPerPack" class="control-label"></label>
                <input asp-for="BindingCoverStock.SheetsPerPack" class="form-control" />
                <span asp-validation-for="BindingCoverStock.SheetsPerPack" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BindingCoverStock.PricePerPack" class="control-label"></label>
                <input asp-for="BindingCoverStock.PricePerPack" class="form-control" />
                <span asp-validation-for="BindingCoverStock.PricePerPack" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>

        <div>
            <a class="btn btn-primary" asp-page="../Index">back to stock</a>
        </div>

    </form>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

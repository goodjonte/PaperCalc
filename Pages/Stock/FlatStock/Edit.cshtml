@page
@model PaperCalc.Pages.FlatStock.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>FlatStock</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="FlatStock.Id" />
            <div class="form-group">
                <label asp-for="FlatStock.Company" class="control-label"></label>
                <input asp-for="FlatStock.Company" class="form-control" />
                <span asp-validation-for="FlatStock.Company" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FlatStock.ProductName" class="control-label"></label>
                <input asp-for="FlatStock.ProductName" class="form-control" />
                <span asp-validation-for="FlatStock.ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FlatStock.Size" class="control-label"></label>
                <select asp-for="FlatStock.Size" class="form-control custom-select">
                    <option value="">Select a Size...</option>
                    <option value="SRA3">SRA3</option>
                    <option value="A4">A4</option>
                    <option value="A3">A3</option>
                    <option value="A2">A2</option>
                    <option value="A1">A1</option>
                    <option value="A0">A0</option>
                    <option value="SRA4">SRA4</option>
                    <option value="SRA3">SRA3</option>
                    <option value="SRA2">SRA2</option>
                    <option value="SRA1">SRA1</option>
                </select>
                <span asp-validation-for="FlatStock.Size" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FlatStock.Weight" class="control-label">Weight (gsm)</label>
                <input asp-for="FlatStock.Weight" class="form-control" />
                <span asp-validation-for="FlatStock.Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FlatStock.CoatType" class="control-label"></label>
                <select asp-for="FlatStock.CoatType" class="form-control custom-select">
                    <option value="">Select a Coating Type...</option>
                    <option value="Adhesive">Adhesive</option>
                    <option value="Coated">Coated</option>
                    <option value="Uncoated">Uncoated</option>
                    <option value="Synthetic">Synthetic</option>
                    <option value="Matt">Matt</option>
                    <option value="Satin">Satin</option>
                    <option value="Gloss">Gloss</option>
                </select>
                <span asp-validation-for="FlatStock.CoatType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FlatStock.PackCost" class="control-label"></label>
                <input asp-for="FlatStock.PackCost" class="form-control" />
                <span asp-validation-for="FlatStock.PackCost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FlatStock.SheetsPerPack" class="control-label"></label>
                <input asp-for="FlatStock.SheetsPerPack" class="form-control" />
                <span asp-validation-for="FlatStock.SheetsPerPack" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

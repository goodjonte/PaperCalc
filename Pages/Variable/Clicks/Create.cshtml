@page
@model PaperCalc.Pages.Variable.Clicks.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Clicks</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Clicks.Name" class="control-label"></label>
                <input asp-for="Clicks.Name" class="form-control" />
                <span asp-validation-for="Clicks.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Clicks.Cost" class="control-label"></label>
                <input asp-for="Clicks.Cost" class="form-control" />
                <span asp-validation-for="Clicks.Cost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Clicks.ColourId" class="control-label"></label>
                <select asp-for="Clicks.ColourId" class="form-control form-select-sm form-select " asp-items="ViewBag.ColourId"></select>
                <span asp-validation-for="Clicks.ColourId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Clicks.SizeId" class="control-label"></label>
                <select asp-for="Clicks.SizeId" class="form-control form-select-sm form-select " asp-items="ViewBag.SizeId"></select>
                <span asp-validation-for="Clicks.SizeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>


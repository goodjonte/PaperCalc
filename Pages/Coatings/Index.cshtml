@page
@model PaperCalc.Pages.Coatings.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Coatings[0].Name)
            </th>
            <th>
                Number Of Papers 
            </th>
            <th>
                Average Price
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.CoatingsDTOs) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfPapers)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AveragePrice)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.CoatingId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.CoatingId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.CoatingId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@page
@model PaperCalc.Pages.Coatings.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Coatings</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Coatings.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Coatings.Name)
        </dd>
        <dt class="col-sm-2">
            Average Cost
        </dt>
        <dd class="col-sm-10">
            $@ViewData["Average"]
        </dd>
    </dl>
    <dl>
        <dt>Papers</dt>
        @{
            foreach (PaperCalc.Models.Paper p in Model.CoatingsPapers)
            {
                <dd>@p.Company @p.Brand @p.Type @p.Weight<span>Gsm</span> @p.Size - @p.SheetsPerPack<span> sheets @@ $@p.SheetCost each - $@p.PackCost</span></dd>
            }
        }
    </dl>
    
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Coatings?.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
